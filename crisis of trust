    <!-- Script to Render Charts -->
    <script>
        // Common Tooltip Configuration for Multi-line Labels
        const tooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // Utility to Wrap Long Labels
        function wrapLabel(str, maxLen = 16) {
            if (str.length <= maxLen) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxLen) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        /* -------------------------------------------------------------------------- */
        /* AI TEXT DECODE EFFECT LOGIC                       */
        /* -------------------------------------------------------------------------- */

        const CHARACTERS = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()_+-=[]{}|;:,.<>?/";
        const DECODE_DURATION = 1500; // Total time to reveal in ms
        const FRAME_RATE = 50; // ms per frame

        class TextScramble {
            constructor(el) {
                this.el = el;
                this.originalText = el.innerText; // Keep original text
                this.isAnimating = false;
                
                // Clear text initially for reveal
                this.el.innerText = ""; 
                this.el.style.opacity = "1"; // Make visible but empty
                
                this.animate();
            }

            animate() {
                this.isAnimating = true;
                const length = this.originalText.length;
                let startTime = Date.now();
                
                // Add scrambling class for style
                this.el.classList.add('scrambling');

                const interval = setInterval(() => {
                    const timePassed = Date.now() - startTime;
                    const progress = Math.min(timePassed / DECODE_DURATION, 1);
                    
                    let output = "";
                    
                    // Logic: 
                    // 1. Characters already "solved" based on progress
                    // 2. A block of random characters that is shrinking
                    // 3. The rest is empty (optional, but here we just fill width)
                    
                    const charsToReveal = Math.floor(length * progress);
                    
                    for (let i = 0; i < length; i++) {
                        if (i < charsToReveal) {
                            // Character is revealed
                            output += this.originalText[i];
                        } else {
                            // Character is random
                            output += CHARACTERS[Math.floor(Math.random() * CHARACTERS.length)];
                        }
                    }

                    this.el.innerText = output;

                    if (progress >= 1) {
                        clearInterval(interval);
                        this.el.innerText = this.originalText; // Ensure exact match at end
                        this.el.classList.remove('scrambling');
                        this.isAnimating = false;
                    }

                }, FRAME_RATE);
            }
        }

        // Intersection Observer to trigger effect
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1 // Trigger when 10% visible
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const target = entry.target;
                    // Check if already animated to prevent loop (optional, but good for UX)
                    if (!target.classList.contains('ai-revealed')) {
                        new TextScramble(target);
                        target.classList.add('ai-revealed');
                    }
                }
            });
        }, observerOptions);

        // Target all elements with class 'ai-reveal'
        document.querySelectorAll('.ai-reveal').forEach(el => {
            observer.observe(el);
        });

        /* -------------------------------------------------------------------------- */
        /* CHART GENERATION                               */
        /* -------------------------------------------------------------------------- */

        // --- CHART 1: Evolution (Radar) ---
        const ctxEvolution = document.getElementById('evolutionChart').getContext('2d');
        new Chart(ctxEvolution, {
            type: 'radar',
            data: {
                labels: ['Real-time', 'Visual Fidelity', 'Audio Sync', 'Emotional Depth', 'Autonomy'],
                datasets: [
                    {
                        label: 'Deepfake 1.0 (2018)',
                        data: [20, 40, 30, 10, 5],
                        backgroundColor: 'rgba(148, 163, 184, 0.2)', // Slate 400
                        borderColor: 'rgba(148, 163, 184, 1)',
                        pointBackgroundColor: 'rgba(148, 163, 184, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Deepfake 3.0 (2026)',
                        data: [95, 98, 95, 90, 85],
                        backgroundColor: 'rgba(34, 211, 238, 0.2)', // Cyan
                        borderColor: '#22d3ee',
                        pointBackgroundColor: '#22d3ee',
                        borderWidth: 2
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#334155' },
                        grid: { color: '#334155' },
                        pointLabels: {
                            color: '#cbd5e1',
                            font: { size: 11 }
                        },
                        ticks: { display: false, backdropColor: 'transparent' },
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                },
                plugins: {
                    legend: {
                        labels: { color: '#e2e8f0' }
                    },
                    tooltip: {
                        ...tooltipConfig,
                        backgroundColor: '#0f172a',
                        titleColor: '#22d3ee',
                        bodyColor: '#e2e8f0',
                        borderColor: '#334155',
                        borderWidth: 1
                    }
                }
            }
        });

        // --- CHART 2: Impact Analysis (Bar) ---
        const ctxImpact = document.getElementById('impactChart').getContext('2d');
        const rawLabels = ['Media & Entertainment', 'Cyber Security', 'Social Media', 'Finance/Banking', 'Legal/Policy'];
        const processedLabels = rawLabels.map(l => wrapLabel(l));

        new Chart(ctxImpact, {
            type: 'bar',
            data: {
                labels: processedLabels,
                datasets: [
                    {
                        label: 'Fraud/Risk Score',
                        data: [30, 90, 75, 95, 60],
                        backgroundColor: '#f472b6', // Pink
                    },
                    {
                        label: 'Business Opportunity',
                        data: [95, 80, 90, 40, 30],
                        backgroundColor: '#22d3ee', // Cyan
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        ticks: { color: '#94a3b8', font: { size: 10 } },
                        grid: { display: false }
                    },
                    y: {
                        ticks: { color: '#94a3b8' },
                        grid: { color: '#334155' },
                        beginAtZero: true,
                        max: 100
                    }
                },
                plugins: {
                    legend: {
                        labels: { color: '#e2e8f0' }
                    },
                    tooltip: {
                        ...tooltipConfig,
                        backgroundColor: '#0f172a',
                        borderColor: '#334155',
                        borderWidth: 1
                    }
                }
            }
        });
    </script>
</body>
